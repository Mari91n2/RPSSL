<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="RPSLSGame.MainWindow"
        Title="Rock Paper Scissors Lizard Spock"
        Width="420" Height="430"
        CanResize="False">

    <StackPanel Margin="20" Spacing="14">

        <TextBlock Text="Rock · Paper · Scissors · Lizard · Spock"
                   FontSize="22"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/>

        <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="6" Padding="10">
            <StackPanel>
                <TextBlock x:Name="TxtInfo"
                           Text="Tryk på et symbol for at starte."
                           FontSize="14"/>
                <TextBlock x:Name="TxtChoices"
                           Text="Du: -   |   Computer: -"
                           FontSize="13"
                           Margin="0,4,0,2"/>
                <TextBlock x:Name="TxtScore"
                           Text="Stilling → Du: 0  |  Computer: 0"
                           FontSize="14"
                           FontWeight="SemiBold"/>
            </StackPanel>
        </Border>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="BtnRock" Content="Rock" Width="80" Margin="4"/>
            <Button x:Name="BtnPaper" Content="Paper" Width="80" Margin="4"/>
            <Button x:Name="BtnScissors" Content="Scissors" Width="90" Margin="4"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="BtnLizard" Content="Lizard" Width="80" Margin="4"/>
            <Button x:Name="BtnSpock" Content="Spock" Width="80" Margin="4"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,14,0,0">
            <Button x:Name="BtnRestart" Content="Nulstil" Width="100" Margin="4"/>
            <Button x:Name="BtnExit" Content="Luk" Width="80" Margin="4"/>
        </StackPanel>
    </StackPanel>
</Window>
