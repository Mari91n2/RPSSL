<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AvaloniaApplication3.MainWindow"
        Width="400" Height="500"
        Title="RPSSL Spil">

    <StackPanel Margin="20">

        <TextBlock Text="Rock Paper Scissors Lizard Spock"
                   FontSize="20"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 20"/>

        <!--
Jeg har kigget på lærerens RPSSL-solution for at forstå hvordan man laver knapper og tekst i Avalonia.
Selve layoutet har jeg så bare sat sammen selv med StackPanel + knapper.
Bare basic GUI så jeg kunne få spillet til at virke.
-->
        <!-- Knapper til spilleren -->
        <StackPanel Orientation="Vertical" Spacing="10">
            <Button Content="Rock" Click="OnPlayerClick"/>
            <Button Content="Paper" Click="OnPlayerClick"/>
            <Button Content="Scissors" Click="OnPlayerClick"/>
            <Button Content="Lizard" Click="OnPlayerClick"/>
            <Button Content="Spock" Click="OnPlayerClick"/>
        </StackPanel>

        <Separator Margin="0 20 0 20"/>

        <TextBlock x:Name="AgentValgText" 
                   Text="Agent valg: -" 
                   FontSize="16"/>

        <TextBlock x:Name="ResultatText"
                   Text="Resultat: -" 
                   Margin="0 10 0 0"
                   FontSize="16"/>

        <TextBlock x:Name="ScoreText"
                   Text="Stilling: Dig 0 - Agent 0"
                   Margin="0 20 0 0"
                   FontSize="16"/>

    </StackPanel>
</Window>
